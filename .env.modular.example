# Modular Architecture Configuration (Phase 4 Migration)
# Copy these variables to your .env file to enable the new modular architecture

# Global modular architecture flag
USE_MODULAR_ARCHITECTURE=false

# Per-domain feature flags (require USE_MODULAR_ARCHITECTURE=true)
ENABLE_MODULAR_MESSAGES=false
ENABLE_MODULAR_THREADS=false
ENABLE_MODULAR_FILES=false
ENABLE_MODULAR_REACTIONS=false
ENABLE_MODULAR_WORKSPACE=false

# Performance monitoring and comparison
ENABLE_PERFORMANCE_METRICS=false
MONITOR_LEGACY_COMPARISON=false

# Migration Example Scenarios:

# 1. Testing Phase: Enable performance monitoring only
# USE_MODULAR_ARCHITECTURE=false
# ENABLE_PERFORMANCE_METRICS=true
# MONITOR_LEGACY_COMPARISON=true

# 2. Gradual Rollout: Start with messages only
# USE_MODULAR_ARCHITECTURE=true
# ENABLE_MODULAR_MESSAGES=true
# ENABLE_PERFORMANCE_METRICS=true
# MONITOR_LEGACY_COMPARISON=true

# 3. Full Migration: Enable all services
# USE_MODULAR_ARCHITECTURE=true
# ENABLE_MODULAR_MESSAGES=true
# ENABLE_MODULAR_THREADS=true
# ENABLE_MODULAR_FILES=true
# ENABLE_MODULAR_REACTIONS=true
# ENABLE_MODULAR_WORKSPACE=true
# ENABLE_PERFORMANCE_METRICS=true

# 4. Production Ready: Disable monitoring
# USE_MODULAR_ARCHITECTURE=true
# ENABLE_MODULAR_MESSAGES=true
# ENABLE_MODULAR_THREADS=true
# ENABLE_MODULAR_FILES=true
# ENABLE_MODULAR_REACTIONS=true
# ENABLE_MODULAR_WORKSPACE=true
# ENABLE_PERFORMANCE_METRICS=false
# MONITOR_LEGACY_COMPARISON=false