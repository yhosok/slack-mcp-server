# Slack Configuration
# Required: Bot token from your Slack app (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Optional: User token for search operations (starts with xoxp-)
# Required only if you want to use the search_messages functionality
# SLACK_USER_TOKEN=xoxp-your-user-token-here

# Optional: Use user token for read operations instead of bot token
# Set to true to enable search APIs and broader workspace access
# Default: false (bot token only for better security)
# USE_USER_TOKEN_FOR_READ=false

# Slack Rate Limiting Configuration
# Number of retries for rate-limited requests (0-10, default: 3)
# SLACK_RATE_LIMIT_RETRIES=3

# Maximum concurrent requests to Slack API (1-20, default: 3)  
# SLACK_MAX_REQUEST_CONCURRENCY=3

# Reject rate-limited calls instead of retrying (default: false)
# SLACK_REJECT_RATE_LIMITED_CALLS=false

# Enable automatic retry on rate limits (default: true)
# SLACK_ENABLE_RATE_LIMIT_RETRY=true

# Cache Configuration (Performance Optimization)
# Enable/disable the entire cache system (default: true)
# CACHE_ENABLED=true

# Channel cache settings
# CACHE_CHANNELS_MAX=1000      # Maximum channel cache entries (10-10000)
# CACHE_CHANNELS_TTL=3600      # Channel cache TTL in seconds (60-86400)

# User cache settings  
# CACHE_USERS_MAX=500          # Maximum user cache entries (10-10000)
# CACHE_USERS_TTL=1800         # User cache TTL in seconds (60-86400)

# Search cache settings
# CACHE_SEARCH_MAX_QUERIES=100 # Maximum search query cache entries (10-1000)
# CACHE_SEARCH_MAX_RESULTS=5000 # Maximum search result cache entries (100-50000)
# CACHE_SEARCH_QUERY_TTL=900   # Search query cache TTL in seconds (60-3600)
# CACHE_SEARCH_RESULT_TTL=900  # Search result cache TTL in seconds (60-3600)

# File cache settings
# CACHE_FILES_MAX=500          # Maximum file cache entries (10-5000)
# CACHE_FILES_TTL=1800         # File cache TTL in seconds (60-86400)

# Thread cache settings
# CACHE_THREADS_MAX=300        # Maximum thread cache entries (10-5000)
# CACHE_THREADS_TTL=2700       # Thread cache TTL in seconds (60-3600)

# Search Ranking Configuration (Advanced relevance scoring features)
# Enable/disable advanced search ranking with TF-IDF, time decay, and engagement scoring (default: true)
# SEARCH_RANKING_ENABLED=true

# Search index cache TTL in seconds (60-3600, default: 900)
# Controls how long search indexes are cached for performance optimization
# SEARCH_INDEX_TTL=900

# Time decay rate for message recency scoring (0.001-1.0, default: 0.01)
# Lower values = slower decay (older messages stay relevant longer)
# Higher values = faster decay (only recent messages are relevant)
# SEARCH_TIME_DECAY_RATE=0.01

# Maximum search index size for performance optimization (100-100000, default: 10000)
# Limits memory usage by capping the maximum number of indexed items
# SEARCH_MAX_INDEX_SIZE=10000

# MCP Configuration  
MCP_SERVER_NAME=slack-mcp-server
MCP_SERVER_VERSION=1.0.0

# Optional: Logging
LOG_LEVEL=info

# Optional: Server Configuration
PORT=3000